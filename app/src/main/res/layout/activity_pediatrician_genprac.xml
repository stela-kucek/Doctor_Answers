<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PediatricianGeneralPractitionerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Topic:"
        android:id="@+id/textView28"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acute diseases/symptoms"
        android:id="@+id/button13"
        android:layout_below="@+id/textView28"
        android:layout_marginTop="45dp"
        android:layout_alignEnd="@+id/button14"
        android:layout_alignStart="@+id/button14"
        android:textSize="20dp"
        android:onClick="acuteButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chronic diseases/symptoms"
        android:id="@+id/button14"
        android:layout_below="@+id/button13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="20dp"
        android:onClick="chronicButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accidental injuries"
        android:id="@+id/button15"
        android:layout_marginTop="45dp"
        android:textSize="20dp"
        android:layout_below="@+id/button14"
        android:layout_alignEnd="@+id/button14"
        android:layout_alignStart="@+id/button14"
        android:onClick="accidentButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:id="@+id/button16"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/button15"
        android:layout_alignStart="@+id/button15"
        android:layout_alignEnd="@+id/button15"
        android:textSize="20dp"
        android:onClick="otherButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button17"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:onClick="backButton" />
</RelativeLayout>
