<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.ac.univie.team8.doctoranswers.MenuActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myProfile"
        android:src="@drawable/ic_account_circle_black_48dp"
        android:layout_marginStart="52dp"
        android:layout_above="@+id/tippsButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:onClick="myProfileButton" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tippsButton"
        android:src="@drawable/ic_bookmark_black_48dp"
        android:layout_alignTop="@+id/myFilesButton"
        android:layout_toStartOf="@+id/doctors" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myFilesButton"
        android:src="@drawable/ic_folder_black_48dp"
        android:layout_marginBottom="189dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/doctors" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doctors"
        android:src="@drawable/ic_people_black_48dp"
        android:layout_alignTop="@+id/myProfile"
        android:layout_toEndOf="@+id/myProfile"
        android:layout_marginStart="44dp"
        android:onClick="myDoctorsButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Where to next?"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="logoutButton"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My profile"
        android:id="@+id/textView13"
        android:layout_alignEnd="@+id/myProfile"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignStart="@+id/myProfile"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My doctors"
        android:id="@+id/textView14"
        android:textAlignment="center"
        android:layout_below="@+id/doctors"
        android:layout_alignStart="@+id/doctors"
        android:layout_alignEnd="@+id/doctors"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Saved tipps"
        android:id="@+id/textView15"
        android:layout_below="@+id/tippsButton"
        android:layout_alignStart="@+id/tippsButton"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/tippsButton"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My files"
        android:id="@+id/textView16"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignStart="@+id/myFilesButton"
        android:layout_alignEnd="@+id/myFilesButton"
        android:textSize="20dp" />


</RelativeLayout>
