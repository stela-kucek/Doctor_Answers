<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.ac.univie.team8.doctoranswers.DentistActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Topic:"
        android:id="@+id/textView38"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swellings"
        android:id="@+id/button23"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView38"
        android:layout_alignEnd="@+id/textView38"
        android:layout_alignStart="@+id/textView38"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:onClick="swellingsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pain"
        android:id="@+id/button25"
        android:layout_below="@+id/button23"
        android:layout_marginTop="60dp"
        android:layout_alignStart="@+id/button23"
        android:layout_alignEnd="@+id/button23"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:onClick="painButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="other"
        android:id="@+id/button26"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/button25"
        android:layout_alignStart="@+id/button25"
        android:layout_alignEnd="@+id/button25"
        android:textSize="20dp"
        android:onClick="otherButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button27"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:onClick="backButton" />
</RelativeLayout>
