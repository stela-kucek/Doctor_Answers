<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.ac.univie.team8.doctoranswers.DoctorHandlerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What do you want to do?"
        android:id="@+id/textView9"
        android:textSize="30dp"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/askAQButton"
        android:src="@drawable/ic_record_voice_over_black_48dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/doctorsButton"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ask my doctor a question"
        android:id="@+id/textView10"
        android:layout_below="@+id/askAQButton"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doctorsButton"
        android:src="@drawable/ic_folder_shared_black_48dp"
        android:onClick="doctorListButton"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="List my saved doctors"
        android:id="@+id/textView11"
        android:layout_below="@+id/doctorsButton"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button3"
        android:textSize="20dp"
        android:onClick="backButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addDoctor"
        android:src="@drawable/ic_person_add_black_48dp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/doctorsButton"
        android:onClick="addDoctorButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add a doctor"
        android:id="@+id/textView23"
        android:layout_below="@+id/addDoctor"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/abc_input_method_navigation_guard" />
</RelativeLayout>
